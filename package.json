{
  "name": "skyscraper",
  "version": "1.0.0",
  "description": "A powerful class-based web scraping library for Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "mocha -r ts-node/register test/**/*.test.ts",
    "test:watch": "mocha -r ts-node/register test/**/*.test.ts --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "skyscraper",
    "scraper",
    "web-scraping",
    "crawler",
    "puppeteer",
    "playwright",
    "cheerio",
    "nodejs"
  ],
  "author": "Vigneshwaran B",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^4.3.0",
    "eslint": "^8.0.0",
    "mocha": "^10.0.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^21.0.0",
    "axios": "^1.6.0"
  },
  "peerDependencies": {
    "playwright": "^1.40.0"
  },
  "peerDependenciesMeta": {
    "playwright": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
